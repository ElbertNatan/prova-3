<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IMDLibrary"
        tools:targetApi="31">

        <!-- Tela Inicial -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.IMDLibrary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login" />

        <!-- Registro de Livros -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Registrar Livro" />

        <!-- Menu -->
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="Menu" />

        <!-- Listagem -->
        <activity
            android:name=".ListActivity"
            android:exported="false"
            android:label="Lista de Livros" />

        <!-- Edição -->
        <activity
            android:name=".EditActivity"
            android:exported="false"
            android:label="Editar Livro" />

        <!-- Exclusão -->
        <activity
            android:name=".DeleteActivity"
            android:exported="false"
            android:label="Deletar Livro" />

        <!-- Registro de Usuários -->
        <activity
            android:name=".RegisterUserActivity"
            android:exported="false"
            android:label="Cadastrar Usuário" />

        <!-- Redefinição de Senha -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:label="Redefinir Senha" />

        <!-- Detalhamento do Livro -->
        <activity
            android:name=".BookDetailsActivity"
            android:exported="false"
            android:label="Detalhes do Livro" />

    </application>

</manifest>
